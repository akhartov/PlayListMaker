<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".library.ui.LibraryActivity"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/back_button"
        style="@style/TitlePanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="@string/library_text"
        />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="@dimen/margin_horizontal"
        app:tabBackground="@color/simple_button_text"
        app:tabIndicatorColor="@color/simple_button"
        app:tabMinWidth="100dp"
        app:tabSelectedTextColor="@color/simple_button"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabTextColor="@color/simple_button"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/margin_horizontal"
        />

</LinearLayout>
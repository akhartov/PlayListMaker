<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextControl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TitlePanel" parent="TextControl">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SettingsControl" parent="TextControl">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/settings_vertical_border</item>
    </style>

    <style name="SettingsSwitch" parent="SettingsControl">
        <item name="android:layout_marginVertical">@dimen/settings_vertical_border</item>
    </style>

    <style name="SettingsText" parent="SettingsControl">
        <item name="android:layout_marginVertical">@dimen/settings_normal_border</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginVertical">@dimen/margin_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SearchButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/simple_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/simple_button_text</item>
        <item name="cornerRadius">@dimen/button_corner</item>
    </style>

    <style name="SearchEditor" parent="TextControl">
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textCursorDrawable">@drawable/search_editor_cursor</item>
    </style>

    <style name="NormalTrackText" parent="TextControl">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/track_normal_color</item>
    </style>

    <style name="SmallestTrackText" parent="TextControl">
        <item name="android:textSize">@dimen/smallest_text_size</item>
        <item name="android:textColor">@color/track_small_color</item>
    </style>

    <style name="NoTracksText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/placeholder_text_size</item>
    </style>

    <style name="PlayerText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>

    <style name="PlayerTrackName" parent="PlayerText">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/icon_active</item>
    </style>

    <style name="PlayerArtist" parent="PlayerText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/icon_active</item>
    </style>

    <style name="PlayerOtherTitle" parent="PlayerText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_other_title_color</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="layout_goneMarginBottom">49dp</item>
    </style>

    <style name="PlayerOtherValue" parent="PlayerText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/icon_active</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="layout_goneMarginBottom">49dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tabs_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="textFillColor">@color/simple_button_text</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextControl" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TitlePanel" parent="TextControl">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="SettingsControl" parent="TextControl">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_marginVertical">@dimen/settings_vertical_border</item>
    </style>

    <style name="SettingsSwitch" parent="SettingsControl">
        <item name="android:layout_marginVertical">@dimen/settings_vertical_border</item>
    </style>

    <style name="SettingsText" parent="SettingsControl">
        <item name="android:layout_marginVertical">@dimen/settings_normal_border</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/black</item>
        <item name="cornerRadius">@dimen/button_corner</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_marginVertical">@dimen/margin_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="backgroundTint">@color/main_button_background</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchEditor" parent="TextControl">
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:textCursorDrawable">@drawable/search_editor_cursor</item>
    </style>

    <style name="NormalTrackText" parent="TextControl">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/track_normal_color</item>
    </style>
    <style name="SmallTrackText" parent="TextControl">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/track_small_color</item>
    </style>
</resources>